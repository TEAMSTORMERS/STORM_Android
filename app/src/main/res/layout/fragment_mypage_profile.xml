<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--Fixme: 임시로 넣어둔 더미데이터입니다!-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleimageview_mypage_profile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.5"
        android:layout_marginTop="83dp"
        android:elevation="10dp"
        android:src="@drawable/storm_logo_example"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView_camera_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="4dp"
        android:elevation="10dp"
        android:src="@color/storm_gray2"
        app:layout_constraintBottom_toBottomOf="@+id/circleimageview_mypage_profile"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/circleimageview_mypage_profile"
        app:layout_constraintWidth_percent="0.083" />

    <ImageView
        android:id="@+id/imageview_camera_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/mypage_ic_photo_edit"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/circleImageView_camera_button"
        app:layout_constraintEnd_toEndOf="@+id/circleImageView_camera_button"
        app:layout_constraintStart_toStartOf="@+id/circleImageView_camera_button"
        app:layout_constraintTop_toTopOf="@+id/circleImageView_camera_button"
        app:layout_constraintWidth_percent="0.05" />


    <TextView
        android:id="@+id/textview_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/notosans_medium"
        android:text="사용자 이름"
        android:textColor="@color/storm_popup_line_gray"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circleimageview_mypage_profile" />

    <TextView
        android:id="@+id/textview_user_name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/notosans_bold"
        android:text="이영진"
        android:textSize="16sp"
        android:textColor="@color/storm_gray"
        app:layout_constraintStart_toStartOf="@+id/textview_user_name"
        app:layout_constraintTop_toBottomOf="@+id/textview_user_name"/>

    <EditText
        android:id="@+id/edittext_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/notosans_bold"
        android:includeFontPadding="false"
        android:text="이영진"
        android:textSize="16sp"
        android:singleLine="true"
        android:textColor="@color/storm_gray"
        app:layout_constraintBottom_toBottomOf="@+id/textview_user_name_input"
        app:layout_constraintEnd_toStartOf="@+id/imagebutton_mypage_edit"
        app:layout_constraintStart_toStartOf="@+id/textview_user_name"
        app:layout_constraintTop_toTopOf="@+id/textview_user_name_input"
        android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/imagebutton_mypage_edit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintWidth_percent="0.0416"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/mypage_ic_edit"
        app:layout_constraintBottom_toBottomOf="@+id/textview_user_name_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textview_user_name_input" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="26dp"
        android:background="@color/storm_popup_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_user_name_input" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_project_align"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="37dp"
        android:paddingRight="39dp"
        android:layout_marginTop="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <TextView
            android:id="@+id/textview_project_align"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_bold"
            android:text="참여한 프로젝트 정렬"
            android:textColor="@color/storm_gray"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imagebutton_project_align"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mypage_align_next"
            app:layout_constraintBottom_toBottomOf="@+id/textview_project_align"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textview_project_align" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_qna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="37dp"
        android:paddingRight="39dp"
        android:layout_marginTop="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraint_project_align">

        <TextView
            android:id="@+id/textview_qna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_bold"
            android:text="문의사항"
            android:textColor="@color/storm_gray"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imagebutton_qna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mypage_align_next"
            app:layout_constraintBottom_toBottomOf="@+id/textview_qna"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textview_qna" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="37dp"
        android:paddingRight="39dp"
        android:layout_marginTop="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraint_qna">

        <TextView
            android:id="@+id/textview_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_bold"
            android:text="로그아웃"
            android:textColor="@color/storm_gray"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imagebutton_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mypage_align_next"
            app:layout_constraintBottom_toBottomOf="@+id/textview_logout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textview_logout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_withdrawa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="37dp"
        android:paddingRight="39dp"
        android:layout_marginTop="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraint_logout">

        <TextView
            android:id="@+id/textview_withdrawa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_bold"
            android:text="회원탈퇴"
            android:textColor="@color/storm_gray"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imagebutton_withdrawa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mypage_align_next"
            app:layout_constraintBottom_toBottomOf="@+id/textview_withdrawa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textview_withdrawa" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>