<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_dialog_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toTopOf="@id/view_dialog_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_percent="0.67">

        <TextView
            android:id="@+id/textview_dialog_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V2X3ER"
            android:textColor="@color/brownish_grey"
            android:textIsSelectable="true"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_dialog_copy"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_dialog_copy"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/background_button_gray_radius"
            android:text="복사"
            android:textColor="@color/brownish_grey"
            android:textSize="9sp"
            app:layout_constraintBottom_toBottomOf="@id/textview_dialog_code"
            app:layout_constraintDimensionRatio="2.2:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textview_dialog_code"
            app:layout_constraintTop_toTopOf="@id/textview_dialog_code" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view_dialog_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="61dp"
        android:background="@color/brownish_grey"
        app:layout_constraintEnd_toEndOf="@id/constraintLayout_dialog_code"
        app:layout_constraintStart_toStartOf="@id/constraintLayout_dialog_code"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout_dialog_code"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>