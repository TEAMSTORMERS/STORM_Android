<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/framelayout_cardpreview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1.083"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageview_cardpreview_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/storm_white"
            android:scaleType="fitCenter"
            android:src="@drawable/h_roundstart_popup_symbol" />

        <TextView
            android:id="@+id/textview_cardpreview_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/storm_white"
            android:ellipsize="end"
            android:maxLines="3"
            android:padding="5dp"
            android:textSize="12sp" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>