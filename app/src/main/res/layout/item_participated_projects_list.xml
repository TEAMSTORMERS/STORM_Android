<?xml version="1.0" encoding="utf-8"?>

<!--fixme : 그리드뷰의 모서리 round처리 적용해야함 그리고 수직,수평 divider도 추가해야함) -->
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/item_participated_list"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="16dp"
    xmlns:tools="http://schemas.android.com/tools">


        <GridLayout
            android:id="@+id/item_project_folder"
            android:layout_width="128dp"
            android:layout_height="140dp"
            android:columnCount="2"
            android:rowCount="2"
            app:layout_constraintBottom_toTopOf="@+id/name_of_project"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/card1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/card2"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/card3"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/card4"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:scaleType="fitXY" />

        </GridLayout>





    <TextView
        android:id="@+id/name_of_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosans_medium"
        android:text="평화의 프로젝트"
        android:textSize="11sp"
        android:textColor="@color/brownish_grey"
        app:layout_constraintEnd_toEndOf="@+id/item_project_folder"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/item_project_folder"
        app:layout_constraintTop_toBottomOf="@+id/item_project_folder" />



</androidx.constraintlayout.widget.ConstraintLayout>