<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/item_participated_list"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_project_forder"
        android:layout_width="128dp"
        android:layout_height="140dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toTopOf="@+id/name_of_project"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:id="@+id/item_project_folder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/storm_popup_line_gray"
            android:columnCount="2"
            android:rowCount="2">

            <ImageView
                android:id="@+id/card1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginRight="0.5dp"
                android:layout_marginBottom="0.5dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/card2"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="0.5dp"
                android:layout_marginBottom="0.5dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/card3"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginTop="0.5dp"
                android:layout_marginRight="0.5dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/card4"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginTop="0.5dp"
                android:layout_marginLeft="0.5dp"
                android:scaleType="centerCrop"/>

        </GridLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name_of_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로젝트 제목"
        android:textSize="11sp"
        android:textColor="@color/storm_gray"
        android:lineSpacingExtra="6sp"
        app:layout_constraintEnd_toEndOf="@+id/cardview_project_forder"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cardview_project_forder"
        app:layout_constraintTop_toBottomOf="@+id/cardview_project_forder"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>