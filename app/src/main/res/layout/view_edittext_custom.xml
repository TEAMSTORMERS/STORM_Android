<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/edittext_customedittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/custom_editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/imagebutton_customedittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/host_a_1_projectname_btn_clean"
        app:layout_constraintBottom_toBottomOf="@+id/edittext_customedittext"
        app:layout_constraintEnd_toEndOf="@+id/edittext_customedittext"
        app:layout_constraintTop_toTopOf="@+id/edittext_customedittext" />

</androidx.constraintlayout.widget.ConstraintLayout>