<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/edittext_customedittext"
        style="@style/custom_editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/imagebutton_customedittext"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@null"
        android:layout_marginEnd="5dp"
        android:src="@drawable/h_projectsetting_btn_cancle"
        app:layout_constraintBottom_toBottomOf="@+id/edittext_customedittext"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintEnd_toEndOf="@+id/edittext_customedittext"
        app:layout_constraintTop_toTopOf="@+id/edittext_customedittext" />

</androidx.constraintlayout.widget.ConstraintLayout>