<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieanimation_waiting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="120dp"
        app:lottie_rawRes="@raw/loading_animation"
        app:lottie_autoPlay="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5초 후에 라운드가 시작합니다"
        android:textColor="@color/storm_gray"
        android:textSize="16dp"
        android:fontFamily="@font/notosans_bold"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="@+id/lottieanimation_waiting"
        app:layout_constraintStart_toStartOf="@+id/lottieanimation_waiting"
        app:layout_constraintEnd_toEndOf="@+id/lottieanimation_waiting"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>