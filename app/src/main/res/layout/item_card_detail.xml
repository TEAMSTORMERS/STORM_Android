<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/framelayout_carddetail_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_carddetail"
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:layout_height="272dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/imageview_carddetail_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintlayout_carddetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageview_carddetail_profile"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:background="@color/storm_red"
                android:layout_marginTop="11dp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageButton
                android:id="@+id/imagebutton_carddetail_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/scrapcard_btn_heart_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>