<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StormEditText">
        <attr name="showRemoveAll" format="boolean" />
        <attr name="android:hint" format="reference|string"/>
        <attr name="android:inputType"/>
        <attr name="android:lines" format="integer"/>
        <attr name="android:drawableStart" format="integer|color"/>
    </declare-styleable>

    <declare-styleable name="StormButton">
        <attr name="android:text" format="reference|string"/>
        <attr name="android:elevation" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="StormCard">
        <attr name="android:elevation" format="dimension"/>
        <attr name="showHeartButton" format="reference|boolean"/>
        <attr name="isTouchable" format="reference|boolean"/>
    </declare-styleable>


    <declare-styleable name="RoundEditText">
        <attr name="android:hint" />
        <attr name="android:inputType" />
        <attr name="android:lines" />
        <attr name="drawable" format="enum">
            <enum name="email" value="0" />
            <enum name="password" value="1" />
        </attr>
        <attr name="removeAll" format="boolean" />
    </declare-styleable>
</resources>

