<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StormEditText">
        <attr name="showRemoveAll" format="boolean" />
        <attr name="android:hint" format="reference|string"/>
    </declare-styleable>

    <declare-styleable name="StormButton">
        <attr name="android:text" format="reference|string"/>
        <attr name="android:elevation" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="StormCard">
        <attr name="android:elevation" format="dimension"/>
        <attr name="showHeartButton" format="reference|boolean"/>
        <attr name="isTouchable" format="reference|boolean"/>
        <attr name="android:layout_marginHorizontal" format="dimension"/>
        <attr name="android:layout_marginVertical" format="dimension"/>
    </declare-styleable>
</resources>

